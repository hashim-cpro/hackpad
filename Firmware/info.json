{
    "name": "XIAO RP2040 Hackpad",
    "vendor": "Open Source at my GitHub",
    "keyboard_name": "Hashim's Hackpad",
    "maintainer": "hashim-cpro",
    "url": "https://github.com/hashim-cpro/Hackpad",
    "processor": "RP2040",
    "bootloader": "rp2040",
    "usb": {
        "vid": "0x1209",
        "pid": "0x0001",
        "device_version": "1.0.0"
    },
    "manufacturer": "Hashim",
    "width": 3,
    "height": 3,
    "matrix_pins": {
        "cols": ["GP27", "GP28", "GP29"],
        "rows": ["GP1", "GP2", "GP4"]
    },
    "diode_direction": "COL2ROW",
    "encoder": {
        "rotary": [{ "pin_a": "GP26", "pin_b": "GP0", "resolution": 4 }]
    },
    "features": {
        "bootmagic": false,
        "mousekey": true,
        "extrakey": true,
        "console": true,
        "command": true,
        "encoder": true,
        "oled": true
    },
    "layouts": {
        "LAYOUT_3x3": {
            "layout": [
                { "matrix": [0, 0], "x": 0, "y": 0 },
                { "matrix": [0, 1], "x": 1, "y": 0 },
                { "matrix": [0, 2], "x": 2, "y": 0 },
                { "matrix": [1, 0], "x": 0, "y": 1 },
                { "matrix": [1, 1], "x": 1, "y": 1 },
                { "matrix": [1, 2], "x": 2, "y": 1 },
                { "matrix": [2, 0], "x": 0, "y": 2 },
                { "matrix": [2, 1], "x": 1, "y": 2 },
                { "matrix": [2, 2], "x": 2, "y": 2 }
            ]
        }
    }
}
